<div class="container mt-5">
    <div class="row mb-3">
        <div class="text-center">
            <h1 class="display-5">All wallets</h1>
        </div>
    </div>

    <div class="row mb-3">
        <div>
                <%= link_to "Add wallet", new_wallet_path, class: "btn btn-warning" %>
        </div>
    </div>

    <div class="row row-cols-2 row-cols-lg-4 g-4">
        <% @wallets.each do |wallet| %>
            <% if wallet.user == current_user %>
                <div class="col">
                    <div class="card">
                        <div class="card-header">
                            <p class="card-text">
                                <strong class="me-2"><%= wallet.name %></strong>
                                <%= link_to "Show", wallet_path(wallet), 
                                                        class: "btn btn-outline-info btn-sm mb-1 me-2" 
                                                        %>
                            </p>
                        </div>
                        <div class="card-body">
                            <div class="d-flex flex-row">
                                <%= link_to "Edit", edit_wallet_path(wallet), 
                                                        class: "btn btn-warning mb-1 me-2" 
                                                        %>
                                <%= button_to "Delete", wallet,  
                                                        method: :delete, 
                                                        data: { confirm: "Are you sure ?" },
                                                        class: " btn btn-danger mb-1 me-2" 
                                                        %>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        <% end %>
    </div>
</div>
