<%= render 'shared/errors', object: @transaction %>

<%= form_for(@transaction, :html => {class: "form-horizontal", role: "form"}) do |form| %>
    <div class="row mb-3">
        <label class="col-2 col-form-label">
            <%= form.label :wallet_id, style: "display: block" %>
        </label>
        <div class="col-5">
            <%= form.collection_select :wallet_id, Wallet.where(user_id: current_user).order(:name), :id, :name, {}, class: "form-select" %>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-2 col-form-label">
            <%= form.label :operation, style: "display: block" %>
        </label>
        <div class="col-5">
            <%= form.select :operation, [["Buy", "BUY"], ["Sell", "SELL"], ["Deposit", "DEPOSIT"], ["Withdraw", "WITHDRAW"]], {}, class: "form-select" %>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">
            <%= form.label :symbol, style: "display: block" %>
        </label>
        <div class="col-sm-5">
            <%= form.text_field :symbol, class: "form-control", placeholder: "ex: BTC" %>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">
            <%= form.label :amount, style: "display: block" %>
        </label>
        <div class="col-sm-5">
            <%= form.text_field :amount, class: "form-control", placeholder: "token amount" %>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">
            <%= form.label :price, style: "display: block" %>
        </label>
        <div class="col-sm-5">
            <%= form.text_field :price, class: "form-control", placeholder: "token price in $" %>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">
            <%= form.label :net_value, style: "display: block" %>
        </label>
        <div class="col-sm-5">
            <%= form.text_field :net_value, class: "form-control", placeholder: "transaction value in $" %>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">
            <%= form.label :fees, style: "display: block" %>
        </label>
        <div class="col-sm-5">
            <%= form.text_field :fees, class: "form-control", placeholder: "optional" %>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">
            <%= form.label :total_value, style: "display: block" %>
        </label>
        <div class="col-sm-5">
            <%= form.text_field :total_value, class: "form-control", placeholder: "optional" %>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">
            <%= form.label :datetime_of_transaction, style: "display: block" %>
        </label>
        <div class="col-sm-5">
            <%= form.datetime_field :datetime_of_transaction, class: "form-control" %>
        </div>
    </div>

    <div class="row mb-3">
        <div class="offset-sm-2">
            <%= form.submit class: "btn btn-warning" %>
        </div>
    </div>
<% end %>